{% extends 'base.html.twig' %}

{% block title %}Inscription Candidat{% endblock %}

{% block body %}

    <div class="d-flex justify-content-center align-items-center text-white" style="height: 90px; background-color: #D43A3A;">
        <h1 class="text-center fs-1 fs-md-2 fs-lg-3 fs-xl-4 fw-bold">Inscription Candidat</h1>
    </div>

    <div class="container my-5">
        <div class="row">
            <div class="col-12 col-md-9 col-lg-8 mx-auto"> <!-- Ajustement pour un formulaire plus large -->
                <div class="shadow p-4 mb-5 bg-body rounded">

                    {{ form_start(form) }}
                        <!-- Vos champs de formulaire ici -->
                        <div class="mb-3">
                            <label for="civilite" class="form-label">Civilité : <span class="required">*</span></label>
                            {{ form_widget(form.civilite, {'attr': {'class': 'form-select'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nom : <span class="required">*</span></label>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="mb-3">
                            <label for="prenom" class="form-label">Prénom : <span class="required">*</span></label>
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                        <div class="mb-3">
                            <label for="telephone" class="form-label">Téléphone : <span class="required">*</span></label>
                            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.telephone) }}
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email : <span class="required">*</span></label>
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="mb-3">
                            <label for="motdepasse" class="form-label">Mot de passe : <span class="required">*</span></label>
                            {{ form_widget(form.password.first, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password.first) }}
                        </div>
                        <div class="mb-3">
                            <label for="confirmation" class="form-label">Confirmation : <span class="required">*</span></label>
                            {{ form_widget(form.password.second, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.password.second) }}
                        </div>
                        <div class="row">
                            <div class="col-md-2 mb-3">
                                <label for="numero" class="form-label">Numéro : </label>
                                {{ form_widget(form.adresse.numero, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-10 mb-3">
                                <label for="adresse" class="form-label">Adresse : </label>
                                {{ form_widget(form.adresse.adresse, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 mb-3">
                                <label for="codepostal" class="form-label">Code Postal : </label>
                                {{ form_widget(form.adresse.code_postal, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-5 mb-3">
                                <label for="ville" class="form-label">Ville : </label>
                                {{ form_widget(form.adresse.ville, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-5 mb-3">
                                <label for="pays" class="form-label">Pays : </label>
                                {{ form_widget(form.adresse.pays, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="d-flex align-items-center">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn-valider me-3'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

        <div class="text-center">
            Vous avez déjà un compte ? <a href="{{ path('connexion') }}" class="link-danger">Se connecter</a>
        </div>
    </div>
{% endblock %}





